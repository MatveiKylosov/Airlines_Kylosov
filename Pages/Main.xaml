        <Label Content="Откуда:" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="white" Margin="0,0,200,90"/>
        <TextBox Width="252" Height="25" HorizontalAlignment="Center" Margin="0,0,0,40" VerticalAlignment="Center"/>

        <Label Content="Куда:" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="white" Margin="0,30,200,0"/>
        <TextBox Width="252" Height="25" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0"/>

        <Button Background="#FF4000" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Height="25" Content="Найти" Foreground="White" Margin="150,160,0,0"/>
        <Label Content="" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="white"/>
    </Grid>
</Page>
